    "import signal, time\n",
    "\n",
    "def handler(signum, time):\n",
    "    print(\"\\nI got a SIGINT, but I am not stopping\")\n",
    "    \n",
    "signal.signal(signal.SIGINT, handler)\n",
    "i=0\n",
    "while True:\n",
    "    time.sleep(.1)\n",
    "    print(\"\\r{}\".format(i), end=\"\")\n",
    "    i += 1"
